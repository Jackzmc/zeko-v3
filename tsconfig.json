{
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types": ["node"],
        "lib": ["es2021"]
    },
    "include": [
        "src/**/*",
        "commands/**/*",
        "events/**/*",
        "modules/**/*",
        "discord.d.ts", 
        "index.ts"
    ],
    "baseUrl": "."
}